@model IEnumerable<dynamic>

<h1>Báo cáo danh sách thuê sách</h1>

<table class="table table-bordered">
    <thead>
    <tr>
        <th>No</th>
        <th>Book name</th>
        <th>Rental date</th>
        <th>Return date</th>
        <th>Customer name</th>
        <th>Quantity</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Any())
    {
        var index = 1;
        foreach (var item in Model)
        {
            <tr>
                <td>@index</td>
                <td>@item.BookName</td>
                <td>@item.RentalDate.ToString("MM/dd/yyyy")</td>
                <td>@item.ReturnDate.ToString("MM/dd/yyyy")</td>
                <td>@item.CustomerName</td>
                <td>@item.Quantity</td>
            </tr>
            index++;
        }
    }
    else
    {
        <tr>
            <td colspan="6" class="text-center">Không có dữ liệu để hiển thị.</td>
        </tr>
    }
    </tbody>
</table>